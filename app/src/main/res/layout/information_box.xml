<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    app:cardCornerRadius="8dp"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/medium_spring_green"
    android:layout_height="115dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60dp"
            android:id="@+id/icon"
            android:src="@drawable/ic_medicine"
            android:layout_margin="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="match_parent"
            android:maxLines="2"
            android:id="@+id/title"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:text="Gift your friends good health"
            android:layout_toEndOf="@id/icon"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:maxLines="2"
            android:id="@+id/Desc"
            android:text="Refer App to your friends and get extra 2% saving on your next order"
            android:layout_toEndOf="@id/icon"
            android:ellipsize="end"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/title"
            android:textColor="#AB000000"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/action_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Desc"
            android:layout_marginStart="6dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/icon"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="1"
            android:paddingBottom="5dp"
            android:text="Share"
            android:textColor="#AB000000" />

        <ImageView
            android:layout_width="20dp"
            android:layout_toEndOf="@id/action_text"
            android:layout_below="@id/Desc"
            android:tint="#AB000000"
            android:layout_marginTop="6.5dp"
            android:src="@drawable/ic_keyboard_arrow_right_small"
            android:layout_height="20dp"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>