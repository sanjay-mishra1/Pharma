<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/medicine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:paddingEnd="10dp"
            android:paddingStart="17dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/medicine_price"
            android:text="@string/app_name"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/medicine_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/multiply"
            android:gravity="center"
            android:text="600"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/multiply"
            android:layout_width="16dp"
            android:layout_height="23dp"
            android:layout_toStartOf="@id/medicine_quantity"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="X"
            android:textColor="#000"
            android:textSize="14sp"
             />

        <TextView
            android:id="@+id/medicine_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:text="14"
            android:layout_marginStart="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:visibility="visible" />

    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_above="@id/view5"
        android:layout_height="match_parent"
        android:layout_marginStart="12.3dp"
        android:layout_alignParentTop="true"
        android:background="#ff00ddff"

         />
    <View
        android:layout_width="match_parent"
        android:id="@+id/view5"
        android:layout_height="1dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout6"
        android:background="#898888" />

</RelativeLayout>
