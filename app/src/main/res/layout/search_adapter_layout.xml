<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="9dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_search_gray_24dp"
        android:id="@+id/medicine_img"
        android:layout_height="60dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_toEndOf="@id/medicine_img"
        android:maxHeight="60dp"
        android:background="?selectableItemBackground"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/medicineName"
            android:text="Name oisoflsjf ljljieurwdd dddd uo nvlsljfs pwipri oworwoeur uowuoru lnvxl99843b ijslfj uoworuowur uowuoru ooworwuer"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_marginStart="5dp"
            android:textColor="#000"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/medicine_weight"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:visibility="gone"
            android:text="kkk"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/view_color"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        android:layout_marginStart="60dp"
        android:layout_height="1dp"/>
</RelativeLayout>