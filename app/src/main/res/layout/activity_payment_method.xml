<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentMethodActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="100dp"
        android:clipToPadding="false"
        android:layout_below="@id/appbar"
        android:background="@color/layout_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_border"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rectangle_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="?android:selectableItemBackground"
                    android:drawableStart="@drawable/ic_cod"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:drawablePadding="29dp"
                    android:gravity="center_vertical"
                    android:onClick="codOnClick"
                    android:paddingStart="12dp"
                    android:paddingEnd="1dp"
                    android:text="@string/cod"
                    android:textColor="#000"
                    android:textSize="16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/view_color" />
                <TextView
                    android:id="@+id/noteCOD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="5dp"
                    android:text="Note" />


            </LinearLayout>

            <TextView
                android:id="@+id/wallet_title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingTop="15dp"
                android:text="@string/wallet_payments" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/view_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rectangle_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/paytm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="?android:selectableItemBackground"
                    android:drawableStart="@drawable/ic_paytm"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:drawablePadding="29dp"
                    android:gravity="center_vertical"
                    android:onClick="paytmOnClick"
                    android:paddingStart="12dp"
                    android:paddingEnd="1dp"
                    android:text="@string/paytm"
                    android:textColor="#000"
                    android:textSize="16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/view_color" />

                <TextView
                    android:id="@+id/notePaytm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="5dp"
                    android:text="Note" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rectangle_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/phonepay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableStart="@drawable/ic_phonepe"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:drawablePadding="16dp"
                    android:gravity="center_vertical"
                    android:onClick="phonepayOnClick"
                    android:paddingStart="12dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="10dp"
                    android:text="@string/phonepay"
                    android:textColor="#000"
                    android:textSize="16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/view_color" />
                <TextView
                    android:id="@+id/notePhonepay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="5dp"
                    android:text="Note" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rectangle_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/amazonPay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="?android:selectableItemBackground"
                    android:drawableStart="@drawable/ic_amazonpay"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:drawablePadding="40dp"
                    android:gravity="center_vertical"
                    android:onClick="amazonPayOnClick"
                    android:paddingStart="12dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="10dp"
                    android:text="@string/amazonPay"
                    android:textColor="#000"
                    android:textSize="16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/view_color" />

                <TextView
                    android:id="@+id/noteAmazon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="5dp"
                    android:text="Note" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rectangle_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/googlepay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="?android:selectableItemBackground"
                    android:drawableStart="@drawable/ic_googlepay"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:drawablePadding="33dp"
                    android:gravity="center_vertical"
                    android:onClick="googlePayOnClick"
                    android:paddingStart="12dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="10dp"
                    android:text="@string/googlePay"
                    android:textColor="#000"
                    android:textSize="16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/view_color" />

                <TextView
                    android:id="@+id/noteGoogle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="5dp"
                    android:text="Note" />

            </LinearLayout>
            <TextView
                android:id="@+id/online_title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/online_payments" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/view_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rectangle_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/creditCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="?android:selectableItemBackground"
                    android:drawableStart="@drawable/ic_credit_card_black_24dp"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:drawablePadding="45dp"
                    android:gravity="center_vertical"
                    android:onClick="creditCardOnClick"
                    android:paddingStart="12dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="10dp"
                    android:text="@string/credit"
                    android:textColor="#000"
                    android:textSize="16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/view_color" />

                <TextView
                    android:id="@+id/noteCreditCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="5dp"
                    android:text="Note" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/rectangle_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/netbanking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="?android:selectableItemBackground"
                    android:drawableStart="@drawable/ic_netbanking"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:onClick="netBankingOnClick"
                    android:paddingStart="0dp"
                    android:paddingEnd="1dp"
                    android:text="@string/netbanking"
                    android:textColor="#000"
                    android:textSize="16sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/view_color" />

                <TextView
                    android:id="@+id/noteNetBanking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="5dp"
                    android:text="Note" />

            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginStart="5dp"
                android:layout_toStartOf="@id/amount_card"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pay_mode_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_cod"
                    android:drawablePadding="5dp"
                    android:visibility="gone"
                    android:gravity="center|center_vertical"
                    android:text="@string/pay_using"
                    android:textAllCaps="true"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/pay_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_mode"
                    android:textColor="@color/black" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/amount_card"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="placeOrderOnClick">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/totalAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="10dp"
                            android:paddingEnd="1dp"
                            android:text="123"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/totalTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/totalAmount"
                            android:paddingStart="10dp"
                            android:paddingEnd="1dp"
                            android:text="@string/total"
                            android:textColor="#8EFFFFFF" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/place_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:gravity="end"
                        android:text="@string/place_order"
                        android:textColor="#fff" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>
</RelativeLayout>