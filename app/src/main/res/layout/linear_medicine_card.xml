<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/color"
        android:background="@drawable/com_facebook_auth_dialog_background"
        android:padding="5dp">
        <androidx.cardview.widget.CardView
            android:layout_width="35dp"
            app:cardCornerRadius="17.5dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#fff"
            android:layout_alignParentStart="true"
            android:layout_height="35dp">
            <ImageButton
                android:layout_width="35dp"
                android:id="@+id/addToFav"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_favorite_black_24dp"
                android:layout_height="35dp"/>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="100dp"
            android:id="@+id/medicine_img"
            android:src="@drawable/com_facebook_profile_picture_blank_square"
            android:layout_height="100dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/medicine_img"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/medicine_name"
                android:text="Name"
                android:textSize="18sp"
                android:lines="1"
                android:textColor="#000"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/medicine_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="920"
                android:textColor="#000"
                android:textSize="18sp" />
            <RelativeLayout
                android:id="@+id/prices"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/medicine_original_price"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/medicine_discount"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/medicine_original_price"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/holo_blue_bright"
                    android:visibility="visible" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content">
                <ImageButton
                    android:layout_width="40dp"
                    android:tint="@color/colorAccent"
                    android:layout_gravity="end"
                    android:id="@+id/addToCart"
                    android:background="?selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_shopping_cart_white_24dp"
                    android:layout_height="40dp"/>
                    <include layout="@layout/quantity_buttons_layout"
                        android:id="@+id/quantity_bt"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>