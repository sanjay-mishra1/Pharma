<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/layout_background"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/buttons"
                android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                app:cornerRadius="8dp"
                android:textSize="17sp"
                android:gravity="start"
                android:backgroundTint="#fff"
                android:layout_marginStart="20dp"
                android:textColor="#000"
                app:iconTint="@null"
                app:rippleColor="@color/view_color"
                android:layout_marginEnd="20dp"
                android:id="@+id/uploadPrescriptionFromGallery"
                app:icon="@drawable/ic_gallery"
                android:textAllCaps="false"
                app:iconPadding="30dp"
                android:text="@string/gallery"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                app:cornerRadius="8dp"
                android:textSize="17sp"
                android:gravity="start"
                android:backgroundTint="#fff"
                android:layout_marginStart="20dp"
                android:textColor="#000"
                app:iconTint="@null"
                app:rippleColor="@color/view_color"
                android:layout_marginEnd="20dp"
                android:id="@+id/uploadPrescriptionFromCamera"
                app:icon="@drawable/ic_camera"
                android:textAllCaps="false"
                app:iconPadding="30dp"
                android:text="@string/camera"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                app:cornerRadius="8dp"
                android:textSize="17sp"
                app:rippleColor="@color/view_color"
                android:gravity="start"
                app:iconTint="@null"
                android:backgroundTint="#fff"
                android:layout_marginStart="20dp"
                android:textColor="#000"
                android:layout_marginEnd="20dp"
                android:id="@+id/openMyPrescription"
                app:icon="@drawable/ic_prescription"
                android:textAllCaps="false"
                app:iconPadding="30dp"
                android:text="@string/my_prescription"
                android:layout_height="wrap_content"/>

                <include layout="@layout/layout_prescription_detail" />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:id="@+id/frame"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>