<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/medicine_card"
    android:background="#fff"
    android:layout_height="290dp">
    <View
        android:layout_width="1dp"
        android:background="@color/view_color"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="1dp"
        android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:clickable="true"
            android:layout_alignParentTop="true"
            android:focusable="true" />
        <RelativeLayout
            android:id="@+id/color"
            android:layout_width="match_parent"
            android:layout_gravity="top"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="150dp"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/medicineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name kljslfjsodf sjfldsf sfldsjfj ljldsjf nlfjdsldf jlsfj klsjfljsd sdlfjdsf lsjfldsj;skf;skd lslfjs"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:gravity="start"
                android:textColor="#000"
                android:textSize="15sp"
                android:visibility="visible" />
            <TextView
                android:id="@+id/companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Company name islhlshf jsllfjsl jsljfldsjf ljsjfls jsljfs lsjlfjsl sjfsjlfj sjlfjsljsljf lsjf"
                android:paddingBottom="5dp"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="12sp"
                />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/originalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="Price"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/priceDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/companyName"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:text="50% off"
                    android:textColor="@android:color/holo_green_light"
                    android:layout_toEndOf="@id/originalPrice"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    />
                </LinearLayout>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:textColor="#000"
                android:textSize="18sp"
                />

            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:backgroundTint="@color/colorAccent"
                android:visibility="visible"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:text="Add"
                app:iconSize="17dp"
                android:textSize="13sp"
                app:cornerRadius="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                app:icon="@drawable/ic_shopping_cart_white_24dp"
                android:layout_height="wrap_content"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:src="@drawable/ic_shopping_cart_white_24dp"
                app:tint="#fff"
                android:visibility="gone"
                app:fabSize="mini"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                app:maxImageSize="17dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/view_color"
        android:layout_marginBottom="1dp"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"/>
</RelativeLayout>