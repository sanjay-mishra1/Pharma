<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="15dp"
        app:shimmer_duration="800"
        android:id="@+id/shimmer"
        app:shimmer_auto_start="false"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                app:cardElevation="1dp"
                app:cardCornerRadius="6dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                app:cardBackgroundColor="@color/shimmer"
                android:layout_height="290dp">
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                app:cardBackgroundColor="@color/shimmer"
                android:layout_marginTop="18dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="3dp"
                android:layout_marginEnd="10dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:id="@+id/color"
                    >
                    <ImageView
                        android:id="@+id/medicine_img"
                        android:src="@color/shimmer_dark"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:focusable="true" />

                    <TextView
                        android:id="@+id/medicine_name"
                        android:lines="2"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/shimmer_dark"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/medicine_img"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/medicine_name"
                        android:layout_centerHorizontal="true"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/medicine_price"
                            android:layout_width="50dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center"
                            android:background="@color/shimmer_dark"
                             />

                        <LinearLayout
                            android:id="@+id/prices"
                            android:background="@color/shimmer_dark"
                            android:layout_width="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_height="20dp"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/star_linear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:paddingBottom="8dp">
                            <ImageView
                                android:layout_width="40dp"
                                android:src="@drawable/ic_shopping_cart_white_24dp"
                                android:tint="@color/colorAccent"
                                android:padding="8dp"

                                android:scaleType="centerInside"
                                android:layout_height="30dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/dataField"
        android:layout_height="wrap_content">
        <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recyclerView"
        android:paddingStart="16dp"
        android:paddingEnd="1dp"

        android:clipToPadding="false"
        android:elevation="10dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            app:cardElevation="3dp"
            app:cardCornerRadius="6dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:layout_height="250dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/gradient_8"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#fff"
                    android:id="@+id/title"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/view_all"
                    android:textColor="#fff"
                    android:paddingStart="5dp"
                    android:paddingEnd="1dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_view_all_circle_filled_black_24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="30dp"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</LinearLayout>