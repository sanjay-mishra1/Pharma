<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:visibility="gone"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"

        />
  <RelativeLayout
      android:layout_width="match_parent"
      android:id="@+id/Relative1"
      android:layout_below="@id/toolbar"
      android:layout_marginTop="10dp"
      android:layout_height="300dp">
<androidx.viewpager.widget.ViewPager
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:id="@+id/viewPager"
    android:background="@color/colorPrimary"
    android:foregroundGravity="center"
    android:paddingEnd="24dp"
    android:clipToPadding="false"
    android:paddingStart="34dp"
    app:layout_anchorGravity="center"/>
      <ImageButton
          android:id="@+id/seeImage"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginBottom="15dp"
          android:layout_marginEnd="10dp"
          android:onClick="seeImages"
          android:layout_alignParentEnd="true"
          android:scaleType="centerCrop"
          android:layout_alignParentBottom="true"
          android:background="?selectableItemBackgroundBorderless"
          android:src="@drawable/ic_view_image_black_24dp" />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:text="@string/add"
        android:backgroundTint="#fff"
        app:cornerRadius="10dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:textColor="#000"
        app:rippleColor="@color/view_color"
        android:id="@+id/uploadFirstImageBt"
        app:iconTint="@null"
        android:layout_centerInParent="true"
        app:icon="@drawable/ic_camera"
        android:layout_height="wrap_content"/>
  </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_below="@id/Relative1"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="-15dp"
        app:cardCornerRadius="10dp"
        android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_margin="10dp"
          android:id="@+id/linear_view"
          android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/dataField"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_height="wrap_content">
      <RelativeLayout
          android:layout_width="match_parent"
        android:orientation="horizontal"
          android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/id"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"/>
          <TextView
              android:layout_width="match_parent"
              android:id="@+id/time_top"
              android:gravity="end"
              android:layout_gravity="end"
              android:textSize="14sp"
              android:layout_alignParentEnd="true"
              android:textStyle="italic"
              android:visibility="gone"
              android:layout_height="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:id="@+id/status"
            android:layout_alignParentEnd="true"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:cornerRadius="15dp"
            android:visibility="gone"
            app:strokeColor="@color/red"
            android:textColor="@color/red"
            android:layout_height="wrap_content"/>
      </RelativeLayout>
          <TextView
              android:layout_width="wrap_content"
              android:id="@+id/name"
              android:visibility="gone"
              android:textSize="16sp"
              android:layout_marginTop="20dp"
              android:textColor="@color/black"
              android:layout_height="wrap_content"/>
          <TextView
              android:layout_width="wrap_content"
              android:id="@+id/note"
              android:visibility="gone"
              android:textSize="16sp"
              android:layout_marginTop="20dp"
              android:textColor="@color/black"
              android:layout_height="wrap_content"/>
          <TextView
              android:layout_width="wrap_content"
              android:id="@+id/orderListTitle"
              android:visibility="gone"
              android:textSize="16sp"
              android:layout_marginTop="20dp"
              android:layout_height="wrap_content"/>

        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            app:iconTint="@null"
            app:iconGravity="textStart"
            app:iconPadding="30dp"
            android:id="@+id/uploadImage"
            app:icon="@drawable/ic_camera"
            android:visibility="gone"
            android:text="Add More"
            android:textAllCaps="false"
            app:strokeColor="@color/colorPrimary"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/listview"
            tools:itemCount="20"
            android:clipToPadding="false"
            android:paddingBottom="90dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/time_bottom"
            android:gravity="end"
            android:layout_gravity="end"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:visibility="gone"
            android:layout_height="wrap_content"/>
      </LinearLayout>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:id="@+id/doneUploadBt"
        app:cornerRadius="10dp"
        android:visibility="gone"
        android:textAllCaps="false"
        android:text="@string/upload_the_prescription"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"/>
</RelativeLayout>