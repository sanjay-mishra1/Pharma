<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/layout_background"
    android:layout_height="match_parent"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Medicine Reminder"
            android:gravity="end"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="30dp"
                android:gravity="end"
                android:layout_height="30dp">
            <ImageButton
                android:layout_width="30dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/add_color"
                android:id="@+id/reminder_add"
                android:onClick="addNewReminder"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_height="30dp"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="30dp"
            android:background="?selectableItemBackgroundBorderless"
            android:id="@+id/backArrow"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Month Name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/monthName"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:layout_width="30dp"
            android:id="@+id/nextArrow"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/weekName"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/monthName"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:text="S"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:text="S"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:text="M"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:text="T"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:text="W"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:text="T"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:text="F"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="S"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    <devs.mulham.horizontalcalendar.HorizontalCalendarView
        android:id="@+id/calendarView"
        android:layout_below="@id/weekName"
        app:colorBottomTextSelected="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:fastScrollEnabled="false"
        app:sizeMiddleText="14sp"
        android:layout_marginTop="5dp"
        app:selectedDateBackground="@drawable/circular_blue"
        app:selectorColor="#fff"
        app:colorBottomText="#CBC2BD"
        app:textColorNormal="@color/black"
        app:textColorSelected="@color/white"
         />

    </RelativeLayout>
<!--    app:textSizeDayName="@dimen/dim_20dp"
        app:textSizeDayNumber="@dimen/dim_20dp"-->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/reminder_recycle"
        tools:listitem="@layout/reminder_container_box"
        android:layout_height="wrap_content"/>
</LinearLayout>