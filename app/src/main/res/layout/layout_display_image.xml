<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainRelative"
    android:layout_height="match_parent"
    android:background="#000">


    <com.jsibbold.zoomage.ZoomageView
        android:id="@+id/message_body_img"
        android:src="@drawable/images"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:zoomage_animateOnReset="true"
        app:zoomage_autoCenter="true"
        app:zoomage_autoResetMode="UNDER"
        app:zoomage_doubleTapToZoom="true"
        app:zoomage_doubleTapToZoomScaleFactor="3"
        app:zoomage_maxScale="8"
        app:zoomage_minScale="0.6"
        app:zoomage_restrictBounds="false"
        app:zoomage_translatable="true"
        app:zoomage_zoomable="true"
        />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/top_action_bar_scrim"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical">
                <ImageButton
                    android:id="@+id/back"
                    android:onClick="backtomessage"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_width="30dp"
                    android:tint="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_height="30dp"
                    android:src="@drawable/black" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp">


                    <ImageButton
                        android:id="@+id/Save_into_storage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="15dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:onClick="onclick_Download"
                        android:src="@drawable/download" />

                    <ImageButton
                        android:id="@+id/share"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="5dp"
                        android:background="?selectableItemBackgroundBorderless"
                        android:onClick="ONclickShare"
                        android:src="@drawable/share" />
                </LinearLayout>

            </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
         android:layout_centerHorizontal="true"
        android:id="@+id/text_message_name"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textSize="18sp"
        android:text="kskfskfj"
        android:background="#86000000"
         android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />
</RelativeLayout>